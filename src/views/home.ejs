    <header class="flex items-center justify-between w-full h-16 px-4 bg-secondary-50 dark:bg-secondary-950 text-secondary-50">
        <div class="logo">Flare</div>
        <div class="flex items-center justify-center w-auto h-full">
            <a href="#" class="link-header"><i class="fa-solid fa-bell"></i></a>
            <a href="/users/<%= currentUser["$id"] %>" class="link-header">
                <img src="<%= currentUser.profilePhotoUrl %>" class="w-10 h-10 rounded-full">
            </a>
        </div>
    </header>



    <main class="dark:bg-secondary-900 bg-secondary-100 w-full flex flex-auto">
        <h1>MAIN</h1>
       
        <% users.documents.forEach(user => { %>
            <a href="/users/<%= user["$id"] %>" class="w-50">
                <h3><%= user.username %></h3>
                <img src="<%= user.profilePhotoUrl %>" class="w-10 h-10">
            </a>
        <% }) %>
    </main>


    <!-- include nav -->
    <%- include('./layouts/nav.ejs') %>
    

</body>
</html>